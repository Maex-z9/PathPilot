<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PathPilot.Desktop.Controls"
        x:Class="PathPilot.Desktop.TreeViewerWindow"
        Title="Passive Skill Tree"
        Width="1200" Height="900"
        Background="#1e1e1e">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="ðŸŒ³" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Name="TreeTitleText"
                               Text="Passive Skill Tree"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Name="RefreshButton"
                            Content="Reload Tree"
                            Click="RefreshButton_Click"
                            Background="#404040"
                            Foreground="White"
                            Padding="12,6"
                            CornerRadius="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Native Tree Canvas -->
        <Border Grid.Row="1" Background="#0a0a0a" ClipToBounds="True">
            <ScrollViewer HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
                <local:SkillTreeCanvas Name="TreeCanvas"
                                       Width="10000"
                                       Height="10000" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
