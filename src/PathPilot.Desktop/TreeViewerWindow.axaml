<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv="clr-namespace:WebViewControl;assembly=WebViewControl.Avalonia"
        x:Class="PathPilot.Desktop.TreeViewerWindow"
        Title="Passive Skill Tree"
        Width="1200" Height="900"
        Background="#1e1e1e">

    <Grid RowDefinitions="Auto,*">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2d2d2d" Padding="15,10">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="ðŸŒ³" FontSize="20" VerticalAlignment="Center"/>
                    <TextBlock Name="TreeTitleText"
                               Text="Passive Skill Tree"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="White"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10">
                    <Button Name="RefreshButton"
                            Content="Refresh"
                            Click="RefreshButton_Click"
                            Background="#404040"
                            Foreground="White"
                            Padding="12,6"
                            CornerRadius="5"/>
                    <Button Name="OpenExternalButton"
                            Content="Open in Browser"
                            Click="OpenExternalButton_Click"
                            Background="#4a9eff"
                            Foreground="White"
                            Padding="12,6"
                            CornerRadius="5"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- WebView -->
        <Border Grid.Row="1" Margin="0">
            <wv:WebView Name="TreeWebView" />
        </Border>
    </Grid>
</Window>
