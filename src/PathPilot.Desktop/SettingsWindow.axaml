<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PathPilot.Desktop.SettingsWindow"
        Title="Settings"
        Width="450"
        Height="450"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="#0c0b0a">

    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Settings"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#c8aa6e"/>
            <TextBlock Text="Configure overlay hotkeys and options"
                       FontSize="12"
                       Foreground="#a89b8c"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Settings Content -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Spacing="20">
                <!-- Overlay Hotkeys Section -->
                <Border Background="#15130f" CornerRadius="8" Padding="15"
                        BorderBrush="#2a2520" BorderThickness="1">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Overlay Hotkeys"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#c8aa6e"/>

                        <!-- Toggle Overlay Hotkey -->
                        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                            <StackPanel Grid.Column="0" Grid.Row="0">
                                <TextBlock Text="Toggle Overlay"
                                           FontSize="13"
                                           Foreground="#e0d6c2"/>
                                <TextBlock Text="Show/hide the overlay"
                                           FontSize="11"
                                           Foreground="#6b6156"/>
                            </StackPanel>
                            <Button Name="ToggleHotkeyButton"
                                    Grid.Column="1"
                                    Grid.Row="0"
                                    Content="F11"
                                    Click="ToggleHotkeyButton_Click"
                                    MinWidth="120"
                                    HorizontalContentAlignment="Center"
                                    Background="#2a2520"
                                    Foreground="#e0d6c2"
                                    BorderBrush="#5a4f3d"
                                    Padding="10,8"
                                    CornerRadius="4"/>
                        </Grid>

                        <!-- Toggle Interactive Hotkey -->
                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Toggle Interactive"
                                           FontSize="13"
                                           Foreground="#e0d6c2"/>
                                <TextBlock Text="Switch between click-through and interactive mode"
                                           FontSize="11"
                                           Foreground="#6b6156"/>
                            </StackPanel>
                            <Button Name="InteractiveHotkeyButton"
                                    Grid.Column="1"
                                    Content="Ctrl+F11"
                                    Click="InteractiveHotkeyButton_Click"
                                    MinWidth="120"
                                    HorizontalContentAlignment="Center"
                                    Background="#2a2520"
                                    Foreground="#e0d6c2"
                                    BorderBrush="#5a4f3d"
                                    Padding="10,8"
                                    CornerRadius="4"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Overlay Position Section -->
                <Border Background="#15130f" CornerRadius="8" Padding="15"
                        BorderBrush="#2a2520" BorderThickness="1">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Overlay Position"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#c8aa6e"/>

                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Reset Position"
                                           FontSize="13"
                                           Foreground="#e0d6c2"/>
                                <TextBlock Text="Move overlay back to top-left corner"
                                           FontSize="11"
                                           Foreground="#6b6156"/>
                            </StackPanel>
                            <Button Name="ResetPositionButton"
                                    Grid.Column="1"
                                    Content="Reset"
                                    Click="ResetPositionButton_Click"
                                    MinWidth="120"
                                    HorizontalContentAlignment="Center"
                                    Background="#2a2520"
                                    Foreground="#e0d6c2"
                                    BorderBrush="#5a4f3d"
                                    Padding="10,8"
                                    CornerRadius="4"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Updates Section -->
                <Border Background="#15130f" CornerRadius="8" Padding="15"
                        BorderBrush="#2a2520" BorderThickness="1">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Updates"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="#c8aa6e"/>

                        <Grid ColumnDefinitions="*,Auto">
                            <StackPanel Grid.Column="0">
                                <TextBlock Name="VersionText"
                                           Text="v1.0.0"
                                           FontSize="13"
                                           Foreground="#e0d6c2"/>
                                <TextBlock Name="UpdateStatusText"
                                           Text="Click to check for updates"
                                           FontSize="11"
                                           Foreground="#6b6156"
                                           Cursor="Arrow"/>
                            </StackPanel>
                            <Button Name="CheckUpdateButton"
                                    Grid.Column="1"
                                    Content="Check for Updates"
                                    Click="CheckUpdateButton_Click"
                                    MinWidth="120"
                                    HorizontalContentAlignment="Center"
                                    Background="#2a2520"
                                    Foreground="#e0d6c2"
                                    BorderBrush="#5a4f3d"
                                    Padding="10,8"
                                    CornerRadius="4"/>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,20,0,0">
            <Button Name="CancelButton"
                    Content="Cancel"
                    Click="CancelButton_Click"
                    Background="#2a2520"
                    Foreground="#a89b8c"
                    BorderBrush="#5a4f3d"
                    Padding="20,10"
                    CornerRadius="4"/>
            <Button Name="SaveButton"
                    Content="Save"
                    Click="SaveButton_Click"
                    Background="#3d3520"
                    Foreground="#c8aa6e"
                    BorderBrush="#c8aa6e"
                    Padding="20,10"
                    CornerRadius="4"/>
        </StackPanel>
    </Grid>
</Window>